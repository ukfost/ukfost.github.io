---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"
    ></script>
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="prefetch" href="/banner.jpg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
  }
  html {
    --purple: rgb(142, 45, 135);
    --dark-purple: rgb(72, 20, 70);
    --orange: rgb(238, 129, 0);
    --pink: rgb(230, 99, 141);
    --blue: rgb(24, 193, 192);
    --max-w: 1200px;
    line-height: 1.4;
    background: var(--dark-purple);
    font-family: "Ubuntu", system-ui, sans-serif;
  }

  hr {
    border: 1px solid lightgray;
  }

  input,
  button,
  [data-button] {
    font-size: 16px;
    border-radius: 6px;
  }

  input {
    padding: 8px;
    border: none;
  }

  button,
  input[type="submit"],
  [data-button] {
    padding-block: 4px;
    padding-inline: 16px;
    display: inline-block;
    background: var(--dark-purple);
    color: white;
    appearance: none;
    border: none;
    font-weight: bold;
    cursor: pointer;
  }

  [data-button] {
    background: var(--orange);
    text-decoration: none;
  }

  body {
    margin: 0;
    min-height: 100vh;
    position: relative;
    background: white;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 100vh;
  }

  a {
    color: inherit;
  }

  a[download]::before {
    content: " (";
  }
  a[download]::after {
    content: ")";
  }

  img {
    max-width: 100%;
    height: auto;
  }
</style>
