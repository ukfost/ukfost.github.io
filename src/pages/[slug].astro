---
import Layout from "../layouts/Layout.astro";
import { getPosts } from "../utils/api";

export const prerender = true;

function decodeHTMLEntities(text) {
  return text.replace(/&#(\d+);/g, (match, dec) => String.fromCharCode(dec));
}

export async function getStaticPaths() {
  const posts = await getPosts();

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post: post },
  }));
}

const { post } = Astro.props;
---

<Layout title={decodeHTMLEntities(post.title) + " Â· UK Friends of Standing Together"}>
  <main>
    <h1 set:html={post.title} />
    <div set:html={post.content} />
  </main>
</Layout>

<style>
  main {
    max-width: min(var(--max-w), 600px);
    margin: 16px auto;
    padding: 8px;
  }
</style>
<style is:global>
  @media (max-width: 600px) {
    .wp-block-embed-twitter,
    .wp-block-embed-instagram {
      max-width: calc(100vw - 16px);
      margin: 0px;
    }
  }
  .wp-block-embed.is-type-rich.is-provider-embed-handler.wp-block-embed-embed-handler {
    margin: 0px;
  }
  .youtube-player {
    max-width: min(100%, calc(100vw - 16px));
  }
  iframe {
    max-width: 100%;
  }
  html {
    background: white;
  }
  figure {
    margin: 0;
  }
  .wp-block-embed.is-type-wp-embed iframe {
    position: unset !important;
    max-width: 100%;
  }
</style>
