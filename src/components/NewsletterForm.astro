<style>
  form {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-image: linear-gradient(
        rgba(71, 11, 61, 0.63),
        rgba(71, 11, 61, 0.63)
      ),
      url("/banner.jpg");
    background-size: cover;
    width: 100%;
    height: 300px;
    color: white;
    position: relative;
  }
  input[type="email"] {
    max-width: 30ch;
  }
  #fields {
    display: flex;
    gap: 8px;
    margin: 10px;
  }
  img {
    width: 100%;
  }
  h2 {
    text-align: center;
  }
</style>

<form id="newsletter" method="POST" action="/subscribe">
  <h2>Subscribe to the UK Friends of Standing Together Newsletter</h2>
  <div id="fields">
    <input name="email" type="email" placeholder="Email" />
    <input type="submit" value="Subscribe" />
  </div>
</form>

